            <param-value>com.medigy.app.pbs.PhysicianBillingSystemApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet-->

    <servlet-mapping>
        <servlet-name>application</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>

</web-app>